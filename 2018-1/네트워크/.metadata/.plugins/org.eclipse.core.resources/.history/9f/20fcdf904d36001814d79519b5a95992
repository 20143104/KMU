<meta charset="utf-8">
    <title>헌법개정안투표</title>
    <style>
        body {
            width: 960px;
            margin: 0 auto;
        }

        #main_section { overflow: hidden; }
        #main_article {
            width: 460px;
            float: left;
        }
        #map_image {
            width: 500px;
            float: right;
        }
        figure { margin: 0; padding: 0; }
    </style>
    <script src="http://code.jquery.com/jquery-1.7.2.js"></script>
    <script src="KoreaMapPathData2.js"></script>
    <script src="raphael-min.js"></script>
    <script>

        $(document).ready(function () {
            // Create Variable
            var canvas = document.getElementById('map_image');
            var paper = Raphael(canvas, 500, 716);

  	    $('.btn_new_data').click(function(){
            	$.getJSON('/map', function (data) {
                	$.each(data, function (key, value) {
            			$.each(koreaMapPathData, function (index, item) {
                			// Create Path
                			var path = paper.path(item['d']);

                			// Stroke Path
                			path.attr('stroke', item['stroke']);

					if(value.name == item['id'])
						path.attr('fill', value.color);
            			});
                	});
            	});
  	    });

            // Create Function
            function randomColor() {
                var letters = '0123456789ABCDEF'.split('');
                var color = '#';
                for (var i = 0; i < 6; i++)
                    color += letters[Math.round(Math.random() * 15)];
                return color;
            }

           $.each(koreaMapPathData, function (index, item) {
                // Create Path
                var path = paper.path(item['d']);

                // Stroke Path
                path.attr('stroke', item['stroke']);

                // Fill Path
                if (item['fill'] != 'none') {
 //                   path.attr('fill', randomColor());
		   path.attr('fill', '#666666');
                } 
            });
        });
    </script>
